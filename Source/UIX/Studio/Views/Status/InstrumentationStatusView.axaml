<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Studio.ViewModels.Status"
             xmlns:vc="using:Studio.ValueConverters"
             xmlns:controls="clr-namespace:Studio.Views.Controls"
             VerticalAlignment="Stretch"
             mc:Ignorable="d" d:DesignWidth="150" d:DesignHeight="20"
             x:Class="Studio.Views.Status.InstrumentationStatusView"
             x:DataType="vm:InstrumentationStatusViewModel">
    <UserControl.DataContext>
        <vm:InstrumentationStatusViewModel />
    </UserControl.DataContext>
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 5 0">
        <TextBlock Text="Compiling... " VerticalAlignment="Center" IsVisible="{Binding AnyJobs}"/>
        <controls:BlockProgressBar x:Name="BlockBar" Width="100" Height="15"/>
    </StackPanel>
</UserControl>