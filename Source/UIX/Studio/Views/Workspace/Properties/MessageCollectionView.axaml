<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:properties="clr-namespace:Studio.ViewModels.Workspace.Properties"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Studio.Views.Workspace.Properties.MessageCollectionView"
             x:DataType="properties:MessageCollectionViewModel">
    <Grid>
        <DataGrid Items="{Binding CondensedMessages}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Message" Binding="{Binding Content}" Width="85*"/>
                <DataGridTextColumn Header="Count" Binding="{Binding Count}" Width="15*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>