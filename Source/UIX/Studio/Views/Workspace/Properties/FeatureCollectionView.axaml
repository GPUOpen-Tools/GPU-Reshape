<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:properties="clr-namespace:Studio.ViewModels.Workspace.Properties"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Studio.Views.Workspace.Properties.FeatureCollectionView"
             x:DataType="properties:FeatureCollectionViewModel">
    <Grid>
        <DataGrid 
            x:Name="FeatureDataGrid"
            Items="{Binding Features}" 
            IsReadOnly="True"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="40*"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="40*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>