<UserControl x:Class="Studio.Views.Tools.PropertyView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="using:Studio.ViewModels.Tools"
             xmlns:propertyGrid="https://github.com/avalonia_extendedtoolkit"
             mc:Ignorable="d"
             d:DesignWidth="300" d:DesignHeight="400"
             x:DataType="vm:PropertyViewModel" x:CompileBindings="True">
    <Grid Focusable="True">
        <propertyGrid:PropertyGrid
            x:Name="PropertyGrid"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            PropertyDisplayMode="All"
            ShowAttachedProperties="True"
            ShowReadOnlyProperties="True">
            <propertyGrid:PropertyGrid.Layout>
                <propertyGrid:CategorizedLayout />
            </propertyGrid:PropertyGrid.Layout>
        </propertyGrid:PropertyGrid>
    </Grid>
</UserControl>