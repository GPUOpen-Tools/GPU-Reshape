<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Studio.Views.Controls">
    <Design.PreviewWith>
        <local:InlineSectionView Width="250" Height="100" Title="Poof">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="A!" />
                <TextBlock Text="B!" />
                <TextBlock Text="C!" />
            </StackPanel>
        </local:InlineSectionView>
    </Design.PreviewWith>

    <Style Selector="local|InlineSectionView">
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0,0,0,2.5" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border>
                    <Grid>
                        <DockPanel LastChildFill="True">
                            <Button 
                                Classes="Icon"
                                Height="25"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Command="{TemplateBinding ExpandCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <PathIcon 
                                        Data="{TemplateBinding ExpansionIcon}" 
                                        Margin=" 0 -0.5 7 0"
                                        Width="9" />
                                    <TextBlock Text="{TemplateBinding Title}" FontSize="12" />
                                    <Border Height="2" HorizontalAlignment="Stretch" Background="Black"/>
                                </StackPanel>
                            </Button>
                            
                            <Border 
                                Height="1"
                                Margin="5 12 0 0"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Stretch"
                                Background="{TemplateBinding LineBorderBrush}"/>
                        </DockPanel>

                        <ContentPresenter
                            Margin="0,30,0,0"
                            IsVisible="{TemplateBinding IsExpanded}"
                            Content="{TemplateBinding Content}" />
                    </Grid>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>